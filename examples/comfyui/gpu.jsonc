{
  "$schema": "https://gpu-cli.sh/schema/v1/gpu.json",
  // GPU CLI Configuration
  // ComfyUI - Node-based Stable Diffusion UI with Qwen Image Edit
  "project_id": "comfyui",
  "provider": "runpod",
  "outputs": ["ComfyUI/output/"],
  "gpu_type": "NVIDIA GeForce RTX 4090",
  "min_vram": 24,
  "workspace_size_gb": 100,

  // Pre-download Qwen Image Edit models (~20GB total)
  "download": [
    {
      "strategy": "hf",
      "source": "Comfy-Org/Qwen-Image-Edit_ComfyUI",
      "target": "ComfyUI/models/"
    }
  ],

  // Optional: Persistent storage for models (recommended)
  // Create a Network Volume in RunPod and add the ID here
  // "network_volume_id": "YOUR_VOLUME_ID",

  "template": {
    "name": "ComfyUI + Qwen Image Edit",
    "description": "Node-based UI with Qwen image editing workflow pre-configured",
    "author": "gpu-cli"
  }
}
